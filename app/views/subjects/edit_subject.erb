<h2> Edit <%= @subject.title %> Subject </h2>

<form method="post" action="/subjects/<%=@subject.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <textarea id="text" name="content" value="<%= @subject.content %> rows="4" cols="100" style="overflow: hidden; word-wrap: break-word; resize: none; height: 500px; "><%= @subject.content %></textarea> 
  <input type="submit" value="submit">
</form>